<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ShareHub</title>
    <link rel="stylesheet" href="signup.css">
    <script src="https://kit.fontawesome.com/59fd3ac906.js" crossorigin="anonymous"></script>
</head>

<body>

    <div class="login-container">
        <div class="left-section">
            <div>
                <h2>ShareHub</h2>
                <p>Pass down the baton of happiness</p>
            </div>
        </div>
        <div class="right-section">
            <div class="right-section-content">
                <div class="right-section-title-span">
                    <h2 class="right-section-title">Welcome Back</h2>
                    <p class="right-section-titledesc">Enter username and password to access your account</p>
                </div>
            </div>
            <div class="right-section-form">
                <form class="login-form" action="/login" method="post">
                    <span class="errorMessage"><%=loginDetailsInvalidMessage%></span>
                    <div class="login-form-group">
                        <label for="useremail" class="login-form-group-lable">Email:</label><br>
                        <div class="login-form-group-input-span"><input type="text" autocomplete="off" id="useremail" name="useremail" placeholder="Enter your email"
                            class="login-form-group-input" required><i class="fa-solid fa-envelope email-icon"></i></div>
                    </div>
                    <div class="login-form-group">
                        <label for="password" class="login-form-group-lable">Password:</label><br>
                       <div class="login-form-group-input-span"><input type="password" id="password" name="password" placeholder="Enter your password"
                            class="login-form-group-input" required><i class="fa-regular fa-eye" id="eye-icon"></i></div> 
                    </div><br>
                    <div class="login-form-group">
                        <button class="login-submit" type="submit">Login</button>
                        <p class="right-section-register">new to ShareHub? <a href="/register" class="right-section-registerbtn">sign up</a></p>
                    </div>
                    <div class="googleSignUps">
                        <div class="google-partition"></div>
                        <p class="ortag">or</p>
                    </div>
                    <a class="googleSignUp-button"  href="/googleLogin"><img class="googleImage" src="img\googleIcon.png" alt="googleImage"><span class="google-text">Sign up with Google</span></a>
                </form>
            </div>
        </div>
    </div>

    <script>
                let eyeicon = document.getElementById("eye-icon");
                let password = document.getElementById("password");

                eyeicon.onclick=()=>{
                    if(password.type == "password"){
                        password.type = "text";
                        eyeicon.className = "fa-solid fa-eye";
                    }else{
                        password.type = "password";
                        eyeicon.className = "fa-regular fa-eye";
                    }
                }
    </script>
</body>

</html>